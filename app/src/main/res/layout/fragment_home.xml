<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="130dp"
                android:layout_height="10dp"
                android:background="@color/colorPrimary"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/profil"
                    app:civ_border_width="1dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="26dp"
                    app:civ_border_color="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/TxtView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Muhammad Iqbal Dzulfikry"
                    android:layout_toRightOf="@+id/profile_image"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="55dp"
                    android:textSize="20sp"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="fikrydzoel98@gmail.com"
                    android:layout_below="@+id/TxtView1"
                    android:layout_toRightOf="@id/profile_image"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/colorPrimary"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rl1"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About Me"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorBlack"/>

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorPrimary"
                    android:layout_below="@id/text2"/>

                <TextView
                    android:id="@+id/TxtView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view1"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:textAlignment="center"
                    android:text="Saya adalah seseorang yang introvert tapi saya ingin mempunyai banyak teman, oleh karena itu saya selalu berbuat baik pada semua orang  "/>

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Interest"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_below="@id/TxtView4"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorBlack"/>

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorPrimary"
                    android:layout_below="@id/text3"/>

                <TextView
                    android:id="@+id/hobby"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hobby : Play Video Games,futsal,linten music and watching movies"
                    android:textSize="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/view2"
                    android:textColor="@color/colorNavAccentUnselected"/>

                <TextView
                    android:id="@+id/makes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Makes: ayam, telor 1/2 matang, mie goreng dan martabak"
                    android:textSize="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/hobby"
                    android:textColor="@color/colorNavAccentUnselected"/>

                <TextView
                    android:id="@+id/mikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mikes :susu coklat, energen, extrajoss susu"
                    android:textSize="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/makes"
                    android:textColor="@color/colorNavAccentUnselected"/>

                <TextView
                    android:id="@+id/interest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Interest :menjadi atlit esport"
                    android:textSize="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/mikes"
                    android:textColor="@color/colorNavAccentUnselected"/>

                <TextView
                    android:id="@+id/citacita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cita-Cita :Menjadi orang berguna bagi orang lain, meskipun hal baik gampang sekali dilupakan"
                    android:textSize="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/interest"
                    android:textColor="@color/colorNavAccentUnselected"/>

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>

